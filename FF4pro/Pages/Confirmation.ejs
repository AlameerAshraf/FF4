        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js" integrity="sha384-ZoaMbDF+4LeFxg6WdScQ9nnR1QC2MIRxA1O9KWEXQwns1G8UNyIEZIQidzb0T1fo" crossorigin="anonymous"></script>
    <![endif]-->

</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                    aria-expanded="false">
                              <span class="sr-only">Toggle navigation</span>
                              <span class="icon-bar"></span>
                              <span class="icon-bar"></span>
                              <span class="icon-bar"></span>
                            </button>
                <a class="navbar-brand" href="#">Integrato</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="#">
                            Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Job code" id="projchk">
                    </div>
                    <button type="button" class="btn btn-default" id="projchkbtn">Check Project State</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Get More Options <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">
                                    Request a Ready App
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Get License from our custom collection
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Rate Your Job
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <br>
                <br>
            </div>
            <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
                <% if (err != 1) { %>
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>                   
                    <strong>Done!  </strong> Request Created Successfully
                </div>

                <% } else {%>
                <div class="alert alert-danger  alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>                    
                        <strong>Oops!  </strong> There was a problem in our system , Please try again later !
                </div>
                <% } %>


                <% if (err != 1 ) { %>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-check-circle" aria-hidden="true"></i> Your Request Data </h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Job Code</label> :
                            <label>
                                <%= AppCode %>
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Connection Mail </label> :
                            <label>
                                <%= Mail %>
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Connection Phone</label>:
                            <label>
                                <%= Phone %>
                            </label>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>


    </div>

    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script>
        $("#projchkbtn").click(function(){
            alert("as");
            var jobcode = $("#projchk").val();
            $.ajax({
                type: 'GET',
                url: 'http://localhost:1337/CheckRequest/'+jobcode,
                success: function (res) {
                    alert('Done');
                },
                Error: function (err) {
                    console.log('Bad');
                }
            });
        })
    </script>
</body>

</html>